@model EditSettingRoomViewModel
@{
    ViewData["Title"] = "Room Settings";
}

<div class="row ml-auto">
    <div class="col-md-1 col-sm-1"></div>
    <div class=" col-md-6 col-sm-8">
        @if (TempData["success"] is not null)
        {
            <div id="message" class="alert alert-success alert-dismissible fade show text-center" role="alert" onclick="hideMessage()">
                <i class="icon fas fa-check"></i>
                @TempData["success"]
            </div>
        }

        @if (TempData["failure"] is not null)
        {
            <div id="message" class="alert alert-danger alert-dismissible fade show text-center" role="alert" onclick="hideMessage()">
                <i class="icon fas fa-sad-tear"></i>
                @TempData["failure"]
            </div>
        }

        @if (TempData["message"] is not null)
        {
            <div id="message" class="alert alert-danger alert-dismissible fade show text-center" role="alert" onclick="hideMessage()">
                <i class="icon  fas fa-times"></i>
                @TempData["message"]
            </div>
        }
        <div class="card card-primary">
            <div class="card-header mx-auto bg-cyan">
                <h3 class="card-title">Set Room Memeber Limit</h3>
            </div>
            <form asp-controller="Room" asp-action="EditSetting" asp-area="" asp-route-returnUrl="Room/EditSetting" method="post" asp-antiforgery="true">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group">
                        <label>All Available Rooms</label>
                        <select asp-for="Id" class="form-control select2 overflow-auto text-center" style="width: 100%;">
                            <option selected="selected">All Rooms</option>
                            @if (Model.PreviousRooms is not null)
                            {
                                foreach (var room in Model.PreviousRooms)
                                {
                                    <option value ="@room.Id">@room.Location @room.Name Capacity[@room.Capacity]</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="MinimumCapacity">Room Minimum Limit</label>
                        <input asp-for="MinimumCapacity" type="number" class="form-control" id="" autocomplete="on" aria-required="true" placeholder="Enter Room Minimum Capacity" required>
                        <span asp-validation-for="MinimumCapacity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MaximumCapacity">Room Maximum Limit</label>
                        <input asp-for="MaximumCapacity" type="number" class="form-control" id="" autocomplete="on" aria-required="true" placeholder="Enter Room Maximum Capacity" required>
                        <span asp-validation-for="MaximumCapacity" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="form-group">

                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary">Save </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('#message').on('click', function () {
                $(this).hide();
            });
        });
    </script>
}
@model EditAccountViewModel

<div class="row ml-auto">
    <div class="col-md-1 col-sm-1"></div>
    <div class="col-md-6 col-sm-8">
        @if (TempData["success"] is not null)
        {
            <div id="message" class="alert alert-success alert-dismissible fade show text-center" role="alert" onclick="hideMessage()">
                <i class="icon fas fa-check"></i>
                @TempData["success"]
            </div>
        }

        @if (TempData["failure"] is not null)
        {
            <div id="message" class="alert alert-danger alert-dismissible fade show text-center" role="alert" onclick="hideMessage()">
                <i class="icon fas fa-times"></i>
                @TempData["failure"]
            </div>
        }

        <div class="card card-primary">
            <div class="card-header mx-auto bg-cyan">
                <h3 class="card-title">Edit Account</h3>
            </div>
            <form asp-action="Edit" asp-controller="Account" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="UserName">User Email</label>
                        <input asp-for="UserName" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="ClaimValue">Role</label>
                        <select asp-for="ClaimValue" class="form-control">
                            <option value="">Select Role</option>
                            <option value="admin" selected="@Model.ClaimValue == "admin"">Admin</option>
                            <option value="user" selected="@Model.ClaimValue == "user"">User</option>
                        </select>
                        <span asp-validation-for="ClaimValue" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <input asp-for="UserId" type="hidden" />
                    <button type="submit" class="btn btn-primary">Update Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#message').on('click', function () {
                $(this).hide();
            });
        });
    </script>
}
